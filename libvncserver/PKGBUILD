# Maintainer: Neophytos Kolokotronis <tetris4@gmail.com>

pkgname=libvncserver
pkgver=0.9.12
pkgrel=1
pkgdesc="A cross-platform C libraries that allow you to easily implement VNC server"
arch=('x86_64')
url="https://libvnc.github.io/"
license=('GPL')
depends=('libpng' 'libjpeg' 'gnutls' 'libgcrypt' 'openssl' 'libnsl')
makedepends=('sdl' 'cmake')
source=("https://github.com/LibVNC/libvncserver/archive/LibVNCServer-${pkgver}.tar.gz")
md5sums=('dc2ae6433d2ce45b9f60034c7fb9c10a')

prepare() {
  cd ${pkgname}-LibVNCServer-${pkgver}
}

build() {
  cd ${pkgname}-LibVNCServer-${pkgver}
  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make
}

package() {
  cd ${pkgname}-LibVNCServer-${pkgver}
  make DESTDIR="${pkgdir}" install
}

