pkgname=pambase
pkgver=20190105
pkgrel=1
pkgdesc="Base PAM configuration for services"
arch=('any')
url="http://www.chakralinux.org"
license=('GPL')
source=('system-auth'
        'system-local-login'
        'system-login'
        'system-remote-login'
        'system-services'
        'other')
backup=('etc/pam.d/system-auth'
        'etc/pam.d/system-local-login'
        'etc/pam.d/system-login'
        'etc/pam.d/system-remote-login'
        'etc/pam.d/system-services'
        'etc/pam.d/other')
md5sums=('6116b8e199a3dfd26a085a67a718435d'
         '477237985820117a0e6e1b13a86eb599'
         '8c2fcb3dc209b86885970842f3ff2e20'
         '477237985820117a0e6e1b13a86eb599'
         '6969307eef026979703a6eba33c2e3eb'
         'cd547dd7cf93fffcf02eef49c5009044')

package() {
  install -dm755 "$pkgdir/etc/pam.d"
  install -m644 -t "$pkgdir/etc/pam.d" "${source[@]}"
}

