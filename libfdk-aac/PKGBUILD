pkgname=libfdk-aac
pkgver=2.0.0
pkgrel=1
pkgdesc='Fraunhofer FDK AAC codec library'
arch=('x86_64')
url='https://sourceforge.net/projects/opencore-amr/'
license=('custom')
depends=('glibc')
source=("https://downloads.sourceforge.net/opencore-amr/fdk-aac-${pkgver}.tar.gz")
sha256sums=('f7d6e60f978ff1db952f7d5c3e96751816f5aef238ecf1d876972697b85fd96c')

build() {
  cd fdk-aac-${pkgver}

  ./configure \
    --prefix='/usr' \
    --disable-static
  make
}

package () {
  cd fdk-aac-${pkgver}

  make DESTDIR="${pkgdir}" install

  install -Dm644 NOTICE "${pkgdir}"/usr/share/licenses/libfdk-aac/NOTICE
}
